    "@storybook/addon-links": "^6.2.5",
    "@storybook/react": "^6.2.5",
    "@types/babel__core": "^7.1.14",
    "@types/eslint": "^7.2.10",
    "@types/prettier": "^2.2.3",
    "@types/prismjs": "^1.16.5",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
